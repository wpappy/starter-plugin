{
  "name": "wpappy/wpappy",
  "version": "1.0.5",
  "type": "wordpress-library",
  "description": "The library that introduces a smart layer between the WordPress environment and your plugin or theme.",
  "homepage": "https://github.com/wpappy/wpappy",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Dmitry Pripa",
      "email": "i@dpripa.com",
      "homepage": "https://dpripa.com"
    }
  ],
  "keywords": [
    "wordpress"
  ],
  "config": {
    "platform-check": false,
    "optimize-autoloader": true,
    "autoloader-suffix": "_Wpappy_1_0_5"
  },
  "autoload": {
    "psr-4": {
      "Wpappy_1_0_5\\": "includes/"
    }
  },
  "require": {
    "php": "^7.2.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.3.1",
    "wp-coding-standards/wpcs": "^2.2.1"
  },
  "scripts": {
    "webpack-start": "cd sources && npm run start",
    "webpack-build": "cd sources && npm run build",
    "no-dev": "composer install --no-dev",
    "optimize": "composer dump-autoload --optimize",
    "wpcs": "phpcs",
    "doc": "rm -rf docs/api && phpDocumentor",
    "release": "cd tools && npm run release"
  }
}